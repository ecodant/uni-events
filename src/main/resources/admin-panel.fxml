<AnchorPane fx:id="anchorRoot" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uniquindio.finalproject.unievents.AdminPanelController">
   <children>
      <SplitPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0">
        <items>
            <VBox id="container-white" alignment="CENTER" prefHeight="600.0" prefWidth="390.0" stylesheets="@css%20sources/style.css">
               <children>
                  <ImageView fitHeight="258.0" fitWidth="411.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/SCREEN05-01.png" />
                     </image>
                  </ImageView>
                  <HBox>
                     <children>
                        <Icon fx:id="refreshIcon" content="REFRESH" onMouseClicked="#refreshTable">
                           <padding>
                              <Insets left="20.0" />
                           </padding>
                        </Icon>
                        <Label id="event-text" alignment="CENTER" contentDisplay="CENTER" prefHeight="32.0" prefWidth="72.0" stylesheets="@css%20sources/style.css" text="Events" textAlignment="CENTER" wrapText="true">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <TableView fx:id="eventTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="nameColumn" minWidth="20.0" prefWidth="160.0" text="Name" />
                      <TableColumn fx:id="typeColumn" prefWidth="120.0" text="Type" />
                      <TableColumn fx:id="descriptionColumn" prefWidth="170.0" text="Description" />
                      <TableColumn fx:id="addressColumn" prefWidth="126.0" text="Address" />
                      <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                      <TableColumn fx:id="imageColumn" prefWidth="200.0" text="Image" />
                    </columns>
                  </TableView>
                  <HBox alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="518.0" spacing="20.0">
                     <children>
                        <Button id="sign-up-btn" fx:id="addBtn" alignment="CENTER" mnemonicParsing="false" onAction="#handleNew" stylesheets="@css%20sources/style.css" text="ADD NEW">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button id="fade-red-btn" mnemonicParsing="false" onAction="#handleDelete" stylesheets="@css%20sources/style.css" text="DELETE" />
                        <Button id="fade-btn" fx:id="singOutBtn" alignment="CENTER" layoutX="432.0" layoutY="10.0" mnemonicParsing="false" onAction="#backHome" stylesheets="@css%20sources/style.css" text="SING OUT" />
                     </children>
                     <VBox.margin>
                        <Insets right="20.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
